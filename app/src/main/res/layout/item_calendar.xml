<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/edittext_padding">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textview_text_size" />

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:textSize="@dimen/textview_text_size" />

    <TextView
        android:id="@+id/tvEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStart"
        android:layout_marginLeft="@dimen/textview_phone_margin_left"
        android:layout_marginStart="@dimen/textview_phone_margin_left"
        android:textSize="@dimen/textview_text_size" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEnd"
        android:textSize="@dimen/textview_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_size"
        android:layout_below="@id/tvDescription"
        android:background="@color/view_background" />
</RelativeLayout>
